<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_mode"
    android:background="@color/gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackqr1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            >
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mode_radio">

                    <RadioButton
                        android:id="@+id/low_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/low_mode"
                        android:textSize="25dp"
                        android:layout_margin="30dp"/>
                    <RadioButton
                        android:id="@+id/normal_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/normal_mode"
                        android:textSize="25dp"
                        android:layout_margin="30dp"/>
                    <RadioButton
                        android:id="@+id/high_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/high_mode"
                        android:textSize="25dp"
                        android:layout_margin="30dp"/>
                </RadioGroup>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>